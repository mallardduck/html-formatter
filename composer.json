{
    "name": "navindex/html-formatter",
    "type": "library",
    "description": "HTML beautifier and minifier library for development and testing.",
    "homepage": "https://github.com/navindex/html-formatter",
    "keywords": [
        "beautify",
        "format",
        "HTML",
        "indent",
        "minify"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Dan Pock",
            "email": "self@danpock.me",
            "homepage": "https://danpock.me",
            "role": "Developer"
        },
        {
            "name": "Miklos Karpati",
            "email": "mk@navindex.com.au",
            "homepage": "https://www.navindex.com.au",
            "role": "OG Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.2.0",
        "phpunit/phpunit": "^9.5.16",
        "php-coveralls/php-coveralls": "^2.5",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Navindex\\HtmlFormatter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Navindex\\HtmlFormatter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": "phpstan analyse",
        "test": "phpunit",
        "testonly": "phpunit --filter"
    },
    "scripts-descriptions": {
        "check": "Run static analysis",
        "test": "Run unit tests",
        "testonly": "Run a single test"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/navindex"
        }
    ]
}
