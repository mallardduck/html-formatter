{
    "name": "navindex/html-formatter",
    "type": "library",
    "description": "HTML beautifier and minifier library for development and testing.",
    "homepage": "https://github.com/navindex/html-formatter",
    "keywords": [
        "beautify",
        "format",
        "HTML",
        "indent",
        "minify",
        "Navindex",
        "PHP"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Miklos Karpati",
            "email": "mk@navindex.com.au",
            "homepage": "https://www.navindex.com.au",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:mallardduck/simple-config.git"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "ext-mbstring": "*",
        "navindex/simple-config": "dev-improve-php81-support"
    },
    "require-dev": {
        "larapack/dd": "^1.1",
        "phpstan/phpstan": "^0.12.99",
        "phpunit/phpunit": "^9.5",
        "php-coveralls/php-coveralls": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "Navindex\\HtmlFormatter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Navindex\\HtmlFormatter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": "phpstan analyse",
        "test": "phpunit",
        "testonly": "phpunit --filter"
    },
    "scripts-descriptions": {
        "check": "Run static analysis",
        "test": "Run unit tests",
        "testonly": "Run a single test"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/navindex"
        }
    ]
}
